@{
    ViewData["Title"] = "Customer Profile";
}




<div class="container mt-5">
    <h2 class="text-center mb-4">Customer Profile</h2>

    <div class="card shadow p-4 mb-4">
        <h4>Personal Information</h4>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Name:</div>
            <div class="col-md-7">John Doe</div>
            <div class="col-md-2 text-end">
                <button class="btn text-white" style="background-color: #003262;">Edit</button>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Email:</div>
            <div class="col-md-7">john@example.com</div>
            <div class="col-md-2 text-end">
                <button class="btn text-white" style="background-color: #003262;">Edit</button>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Phone:</div>
            <div class="col-md-7">+1234567890</div>
            <div class="col-md-2 text-end">
                <button class="btn text-white" style="background-color: #003262;">Edit</button>
            </div>
        </div>
    </div>
